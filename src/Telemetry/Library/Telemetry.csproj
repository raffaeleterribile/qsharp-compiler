<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Microsoft.Quantum.Telemetry</RootNamespace>
    <AssemblyName>Microsoft.Quantum.Telemetry</AssemblyName>
    <Authors>Microsoft</Authors>
    <Description>Microsoft QDK telemetry library.</Description>
    <PackageId>Microsoft.Quantum.Telemetry</PackageId>
    <PackageReleaseNotes>See: https://docs.microsoft.com/azure/quantum/qdk-relnotes</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/microsoft/qsharp-compiler</PackageProjectUrl>
    <PackageIcon>qdk-nuget-icon.png</PackageIcon>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <files>
      <file src="bin\$(Configuration)\**\Microsoft.Quantum.Telemetry.dll" target="lib" />
    </files>
    <dependencies Condition="'$(TargetFramework)' == 'netstandard2.1'">
      <dependency id="System.Text.Json" version="6.0.2" />
    </dependencies>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>Microsoft.Quantum.Telemetry.Tests$(PublicKeySuffix)</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Applications.Events.Client" Version="1.1.1.337" />
  </ItemGroup>

  <!-- .NET Standard 2.1 references, compilation flags and build options -->
  <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard2.1'">
    <DefineConstants>NETCORE;NETSTANDARD;NETSTANDARD2_1</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\build\assets\qdk-nuget-icon.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Applications.Events.Client" Version="1.1.1.337" />
  </ItemGroup>

</Project>
